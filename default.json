{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>balena-io/renovate-config"],
  "username": "balena-renovate[bot]",
  "gitAuthor": "Self-hosted Renovate Bot <133977723+balena-renovate[bot]@users.noreply.github.com>",
  "gitIgnoredAuthors": [
    "34882892+balena-ci@users.noreply.github.com",
    "renovate@whitesourcesoftware.com"
  ],
  "onboarding": false,
  "requireConfig": "optional",
  "allowPostUpgradeCommandTemplating": true,
  "allowedPostUpgradeCommands": ["^npm", "^node"],
  "printConfig": true,
  "prConcurrentLimit": 2,
  "prHourlyLimit": 0,
  "cloneSubmodules": true,
  "rebaseWhen": "behind-base-branch",
  "git-submodules": {
    "enabled": true
  },
  "repositories": [
    "product-os/autumndb",
    "product-os/balena-cloudwatch-exporter",
    "product-os/balena-jenkins",
    "product-os/balena-metrics-guard-base",
    "product-os/balena-redis-exporter",
    "product-os/balena-versionist",
    "product-os/environment-production",
    "product-os/environment-staging",
    "product-os/environment-playground",
    "product-os/environments",
    "product-os/flowzone",
    "product-os/renovate-config",
    "product-os/self-hosted-runners",
    "product-os/versionbot",
    "product-os/balena-typescript-skeleton"
  ],
  "kubernetes": {
    "fileMatch": [
      "kube\/.+\\.y[a]?ml$"
    ]
  }
}
