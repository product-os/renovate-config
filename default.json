{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>balena-io/renovate-config"],
  "username": "balena-renovate[bot]",
  "gitAuthor": "Self-hosted Renovate Bot <133977723+balena-renovate[bot]@users.noreply.github.com>",
  "gitIgnoredAuthors": [
    "34882892+balena-ci@users.noreply.github.com",
    "renovate@whitesourcesoftware.com"
  ],
  "onboarding": false,
  "requireConfig": "optional",
  "allowPostUpgradeCommandTemplating": true,
  "allowedPostUpgradeCommands": ["^npm", "^node"],
  "printConfig": true,
  "prConcurrentLimit": 2,
  "prHourlyLimit": 0,
  "cloneSubmodules": false,
  "rebaseWhen": "behind-base-branch",
  "git-submodules": {
    "enabled": true
  },
  "autodiscover": true,
  "autodiscoverFilter": ["product-os/*"]
}
